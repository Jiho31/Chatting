    <div class="ui bottom attached segment" id=bottom_line>
    </div>

    <div id="btns">
        <button class="btn1">바로 입장</button>
        <button id="room_btn" class="btn2">방 만들기</button>
        <form action="/addroomInfo" id="room_modal" class="r-modal" method="POST">
            <input id="roomType" type="hidden" name="room" value="0">
            <!-- Modal content -->
            <div class="modal-content">

                <span class="room-close">&times;</span>

                <p>Making room </p>

                <!-- 채팅 방식 선택하는 아이콘 -->
                <div class="room-icon">

                    <button type="button" class="button selector selected" onclick="roomMode(0)">
                        <div class="room-images">
                            <img class="room-image" src="images/conversation-1.png">
                            <p class="room-choice">1대1 채팅</p>
                        </div>
                    </button>

                    <button type="button" class="button selector" onclick="roomMode(1)">
                        <div class="room-images">
                            <img class="room-image" src='images/conversation.png'>
                            <p class="room-choice">게시판 글</p>
                        </div>
                    </button>
                </div>

                <!-- 채팅방 제목 입력 박스-->
                <div class="ui form">
                    <div class="field">
                        <label>Title</label>
                        <input type="text" id="title" placeholder="Title">
                    </div>
                </div>

                <!-- 채팅방 카테고리 선택 박스-->
                <div class="field">
                    <label>Category</label>
                    <select class="ui fluid dropdown" id="category">
                        <option value="0">free</option>
                        <option value="1">academic</option>
                        <option value="2">hobby</option>
                        <option value="3">date</option>
                        <option value="4">company</option>
                        <option value="5">relationship</option>
                        <option value="6">beauty&style</option>
                    </select>
                </div>

                <!-- 확인 또는 취소 버튼 -->
                <div class="sub-or-can">
                    <button type="button" class="ui secondary submit button">
                        Submit
                    </button>
                    <button type="button" class="ui grey button">
                        Cancel
                    </button>
                </div>

            </div>
        
        </form>

    </div>

    <div id="body">
        <div id="listbody" class="ui three column doubling stackable grid">
            
        </div>
    </div>
    <script src="/javascripts/chat.js"></script>
    <script src="/javascripts/commons.js"></script>

